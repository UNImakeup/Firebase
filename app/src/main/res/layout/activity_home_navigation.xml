<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryTet"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/topArea"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:background="@color/black">


                <TextView
                    android:id="@+id/welcomeDash"
                    android:layout_width="296dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="-6dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="35dp"
                    android:layout_toEndOf="@+id/imageMenu"
                    android:layout_toRightOf="@+id/imageMenu"
                    android:text="     Welcome user"
                    android:textColor="@android:color/secondary_text_dark_nodisable"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageMenu"
                    android:layout_width="87dp"
                    android:layout_height="107dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/zlogo"
                    android:contentDescription="@string/app_name"
                    android:padding="19dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"
                    tools:ignore="UnknownIdInLayout" />

                <TextView
                    android:id="@+id/dashboard_adminName"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/welcomeDash"
                    android:layout_alignEnd="@id/welcomeDash"

                    android:layout_alignRight="@id/welcomeDash"
                    android:layout_marginTop="-33dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:text="Lets get started!"
                    android:textColor="@android:color/secondary_text_dark_nodisable"
                    android:textSize="20sp" />


            </RelativeLayout>

            <GridLayout
                android:layout_width="398dp"
                android:layout_height="390dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-80dp"
                android:columnCount="1"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileDash"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:id="@+id/firstLinear"
                        android:layout_width="match_parent"
                        android:layout_height="214dp"
                        android:background="@color/sub_btn_background"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@color/prettyRed"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10sp"
                            android:text="Get an overview or edit your profile"
                            android:textColor="@android:color/secondary_text_dark_nodisable"

                            android:textSize="20sp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/workoutDash"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work Out"
                            android:textColor="@color/darkwhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10sp"
                            android:text="Lets get started with your desired program!"
                            android:textColor="@android:color/secondary_text_dark_nodisable"

                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginLeft="33dp"
                    android:text="Remember 2 calculate ure BMI"
                    android:textColor="@color/darkwhite"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <GridLayout
                android:layout_width="398dp"
                android:layout_height="295dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:columnCount="2"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bmiDash"
                    android:layout_width="180dp"
                    android:layout_height="155dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sub_btn_background"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/bmigrey"


                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="BMI Calculator"
                            android:textColor="@color/darkwhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/planDash"
                    android:layout_width="186dp"
                    android:layout_height="156dp"
                    android:layout_margin="5dp"

                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sub_btn_background"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="102dp"
                            android:layout_height="91dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12sp"
                            android:src="@drawable/plangrey"


                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Plan"
                            android:textColor="@color/darkwhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>